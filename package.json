{
  "name": "posty",
  "version": "1.0.0",
  "description": "This project is for learning beckend with postgresql using pg and pg migrate. Writing raw sql queries will help learning better.",
  "license": "ISC",
  "author": "Rashid Ameer",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "migrate:up": "tsx ./node_modules/node-pg-migrate/bin/node-pg-migrate.ts --migration-file-language ts up",
    "migrate:down": "tsx ./node_modules/node-pg-migrate/bin/node-pg-migrate.ts --migration-file-language ts down",
    "migrate:create": "tsx ./node_modules/node-pg-migrate/bin/node-pg-migrate.ts --migration-file-language ts create"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.2",
    "@types/pg": "^8.15.6",
    "node-pg-migrate": "^8.0.3",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
